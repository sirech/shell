# -*- mode: Shell-script-*-

#
# Schedule for loading OS-specific settings
#

cfg_echo "Loading settings for OS: $(uname -s)"
case $(uname -s) in
    Darwin )
        os_file=macosx.zsh
        plugins+=(brew osx) ;;
    CYGWIN_NT* ) os_file=cygwin.zsh ;;
    Linux )
        os_file=linux.zsh
        plugins+=(debian)
        ;;
esac

if [ -n "${os_file}" ]; then
    schedule_load 'L01_' $1/os/$os_file
fi
